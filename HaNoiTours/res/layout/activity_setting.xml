<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_toLeftOf="@+id/toggleSatelline"
	        android:text="@string/satelline"
	        android:textSize="25sp"/>
	
	    <ToggleButton
	        android:id="@id/toggleSatelline"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:onClick="setSatelline"/>
	    
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_toLeftOf="@+id/toggleTraffic"
	        android:layout_below="@id/toggleSatelline"
	        android:text="@string/traffic"
	        android:textSize="25sp"/>
	
	    <ToggleButton
	        android:id="@id/toggleTraffic"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/toggleSatelline"
	        android:layout_alignParentRight="true"
	        android:onClick="setTraffic"/>
	    
	</RelativeLayout>
    
</LinearLayout>